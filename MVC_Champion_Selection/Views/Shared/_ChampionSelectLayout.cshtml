
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/Champselect.css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Champion Select", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Picks & Bans", "ChampionSelect", "Home")</li>
                    <li>@Html.ActionLink("Help", "Help", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div class="black70roundedborder">
                <div class="col-md-8" id="credits">
                <p>&copy; @DateTime.Now.Year - Shadow Evelynn</p>
                </div>
                <span class="text-right">
                    <button onclick="TogetherJS(this); return false;" class="btn btn-default">Start Sharing</button>
                    @*<button onclick="switchTheme()" class="btn btn-default">Switch Theme</button>*@
                </span>

            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/scripts/champGrid.js")
    @Scripts.Render("~/scripts/search.js")
    @Scripts.Render("~/scripts/pickBanStages.js")
    @Scripts.Render("~/scripts/pickBan.js")
    @Scripts.Render("~/scripts/changeTheme.js")
    @Scripts.Render("~/scripts/togetherjs-config.js")
    @Scripts.Render("https://togetherjs.com/togetherjs-min.js")
    @RenderSection("scripts", required: false)
    <script>
        $(function () {
            $(".sortable").sortable();
            $(".sortable").disableSelection();
        });
    </script>
</body>
</html>
