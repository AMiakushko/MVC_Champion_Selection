
<div class="team">

    <h3>@Model.Side team</h3>

    <div class="players">

        @{
            for (int i = 1; i < 6; i++)
            {
                Html.RenderPartial("_Player", new PlayerViewModel(Model.Side, i));
            }
        }
    </div>
    <div class="bans">
        <h4> @Model.Side side bans</h4>
        <ul>

            @{
                for (int j = 1; j < 4; j++)
                {
                    Html.RenderPartial("_Ban", new BanViewModel(Model.Side, j));
                }
            }
        </ul>
    </div>

</div>